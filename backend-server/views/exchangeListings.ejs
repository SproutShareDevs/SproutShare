<!DOCTYPE html>
<html>
   <head>
      <title>Exch</title>
   </head>
   <body>
      <%-include('layouts/navbar');-%>
      <h1>Exchange Listings</h1>
      <br/>
      <br/>
      <br/>
      <form action="/exchangeListings/store" method="post" enctype="application/x-www-form-urlencoded">
         <label for="user_ID">User ID</label>
         <input type="text" name="user_ID">

         <label for="ex_plant">Plant Name</label>
         <input type="text" name="ex_plant">

         <label for="ex_post_title">Title</label>
         <input type="text" name="ex_post_title">

         <label for="ex_post_body">Body</label>
         <input type="text" name="ex_post_body">

         <button type="submit">Submit</button>
      </form>
      <br/>
      <form action="/exchangeListings/id" method="get">
         <input type="text" name="id"  placeholder = "Search by id..." >
         <button type="submit">Submit</button>
      </form>
      <br/>
      <form action="/exchangeListings/query" method="get">
         <input type="text" name="string"  placeholder = "Search by description..." >
         <button type="submit">Submit</button>
      </form>
      <br/>
      <% if (typeof exchangeListings !== 'undefined') { %>
         <p>
            <% exchangeListings.forEach(listing => { %>
               <%= listing %> 
               <br/>
               <br/>
            <% }) %>
         </p>
      <% } %>
   </body>
</html>